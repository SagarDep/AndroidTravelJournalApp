<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBusinessImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvBusinessName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivBusinessImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSnippet"
        android:layout_below="@+id/tvBusinessName"
        android:layout_toRightOf="@+id/ivBusinessImage"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/ivRating"
        android:layout_below="@+id/tvSnippet"
        android:layout_toRightOf="@+id/ivBusinessImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRating"
        android:layout_below="@+id/tvSnippet"
        android:layout_toRightOf="@+id/ivRating"
        />


</RelativeLayout>